<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.picchietti.parkingapp.MainActivity">

    <TextView android:text="@string/directions"
        android:id="@+id/directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/choices"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/directions">

        <View android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red" />

        <View android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/red"
            android:background="@drawable/green" />

        <View android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/red"
            android:background="@drawable/blue" />

        <View android:id="@+id/gold"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/green"
            android:layout_below="@id/blue"
            android:background="@drawable/gold" />

    </RelativeLayout>

<!---->

</RelativeLayout>
